<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:context=".ui.user.view.UserFragment">

        <ImageView
            android:id="@+id/imageViewUserAvatar"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewUserAvatar"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/textViewUserBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewUserName"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/textViewUserSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/textViewUserBio"
            app:layout_constraintTop_toBottomOf="@+id/textViewUserBio"
            tools:text="@tools:sample/first_names" />

        <TextView
            android:id="@+id/textViewUserTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/textViewUserBio"
            app:layout_constraintTop_toBottomOf="@+id/textViewUserSite"
            tools:text="@tools:sample/last_names" />

        <TextView
            android:id="@+id/textViewUserFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/textViewUserBio"
            app:layout_constraintTop_toBottomOf="@+id/textViewUserTwitter"
            tools:text="30 followers / 3 following" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
